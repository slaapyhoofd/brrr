{
  "name": "brrr",
  "version": "0.1.0",
  "description": "Batch create lnurlw from lnbits",
  "main": "brrr.js",
  "scripts": {
    "build": "webpack --env prod --mode production",
    "dev": "webpack-dev-server --mode development",
    "eslint": "eslint .",
    "eslint:fix": "eslint . --fix",
    "prettier": "prettier \"**/!(*.d).ts\"",
    "prettier:fix": "prettier \"**/!(*.d).ts\" --fix"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:react/recommended",
      "plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "rules": {
      "react/jsx-uses-react": "off",
      "react/react-in-jsx-scope": "off"
    },
    "plugins": [
      "react",
      "@typescript-eslint"
    ],
    "settings": {
      "react": {
        "pragma": "React",
        "version": "18.2.0"
      }
    },
    "ignorePatterns": [
      "*.js",
      "public/**"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "notyf": "^3.10.0",
    "qrcode": "^1.5.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/qrcode": "^1.5.0",
    "@types/react": "^18.0.21",
    "@types/react-dom": "^18.0.6",
    "@types/w3c-web-nfc": "^1.0.0",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.47.1",
    "css-loader": "^6.7.1",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.8",
    "html-webpack-plugin": "^5.5.0",
    "prettier": "^2.7.1",
    "style-loader": "^3.3.1",
    "ts-loader": "^9.3.1",
    "typescript": "^4.8.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.11.1"
  }
}

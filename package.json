{
  "name": "brrr",
  "version": "0.1.0",
  "description": "Batch create lnurlw from lnbits",
  "main": "brrr.js",
  "scripts": {
    "build": "webpack --env prod --mode production",
    "dev": "webpack-dev-server --mode development",
    "eslint": "eslint .",
    "eslint:fix": "eslint . --fix",
    "prettier": "prettier \"**/!(*.d).ts\"",
    "prettier:fix": "prettier \"**/!(*.d).ts\" --fix"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:react/recommended",
      "plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "rules": {
      "react/jsx-uses-react": "off",
      "react/react-in-jsx-scope": "off"
    },
    "plugins": [
      "react",
      "@typescript-eslint"
    ],
    "settings": {
      "react": {
        "pragma": "React",
        "version": "18.3.1"
      }
    },
    "ignorePatterns": [
      "*.js",
      "public/**"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "notyf": "^3.10.0",
    "qrcode": "^1.5.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/qrcode": "^1.5.5",
    "@types/react": "^18.3.2",
    "@types/react-dom": "^18.3.0",
    "@types/w3c-web-nfc": "^1.0.4",
    "css-loader": "^7.1.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.1",
    "html-webpack-plugin": "^5.6.0",
    "prettier": "^3.2.5",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.5",
    "typescript-eslint": "7.10.0",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.4"
  }
}
